@model IEnumerable<WebAppSalesMVC.Models.SalesRecord>
@{
    ViewData["Title"] = "General sales";
}
<link rel="stylesheet" href="~/css/Style.css" />
<h1>@ViewData["Title"]</h1>
<hr />
<form>
    <div>
        <label for="minDate">Min Date</label>
    </div>
    <div>
        <input type="date" class="inputBox" name="dateMin" value=@ViewData["dateMin"]>
    </div>
    <div>
        <span asp-validation-for="@ViewData["dateMin"]" class="text-danger"></span>
    </div>
    <div>
        <label for="maxDate">Max Date</label>
    </div>
    <div>
        <input type="date" class="inputBox" name="dateMax" value=@ViewData["dateMax"]>
    </div>
    <div>
        <span asp-validation-for="@ViewData["dateMax"]" class="text-danger"></span>
    </div>
    <button type="submit" class="myBottom editBotton">Filter</button>
</form>
<hr />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"> Subsidiaries that sold = @Model.Count() &Iota; Total sales = @Model.Sum(x => x.Amount).ToString("C")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="navSearch text-left">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subsidiary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subsidiary.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody class="text-left">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subsidiary.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subsidiary.State.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>