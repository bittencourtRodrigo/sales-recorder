@model WebAppSalesMVC.Models.State
@{
    ViewData["Title"] = "Delete state";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-lg-4">
        <dl class="">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd style="background-color: #e7e7e7; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px;  padding: 5px">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        <hr />
        <h4>Are you sure you want to delete this?</h4>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn alert-danger"/>
            <a asp-action="Index" class="btn alert-warning">Back</a>
        </form>
    </div>
</div>