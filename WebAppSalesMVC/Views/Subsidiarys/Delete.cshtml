@model WebAppSalesMVC.Models.Subsidiary
@{ 
    ViewData["title"] = "Delete subsidiary";
}
<h1>@ViewData["title"]</h1>
<hr />
<div class="row">
    <div class="col-lg-4">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd style="background-color: #e7e7e7; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; padding: 5px">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd style="background-color: #e7e7e7; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; padding: 5px">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.Opening)
            </dt>
            <dd style="background-color: #e7e7e7; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; padding: 5px">
                @Html.DisplayFor(model => model.Opening)
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.FixedCost)
            </dt>
            <dd style="background-color: #e7e7e7; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; padding: 5px">
                @Html.DisplayFor(model => model.FixedCost)
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd style="background-color: #e7e7e7; border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; padding: 5px">
                @Html.DisplayFor(model => model.State.Name)
            </dd>
        </dl>
        <hr />
        <h4>Are you sure you want to delete this?</h4>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn alert-danger" />
            <a asp-action="Index" class="btn alert-warning">Back</a>
        </form>
    </div>
</div>