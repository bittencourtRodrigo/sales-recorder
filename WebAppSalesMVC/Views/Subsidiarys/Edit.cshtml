@model WebAppSalesMVC.Models.ViewModels.SubsidiaryFormViewModel
@{
    ViewData["Title"] = "Edit subsidiary";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Subsidiary.Id" />
            <div class="form-group">
                <label asp-for="Subsidiary.Name" class="control-label"></label>
                <input asp-for="Subsidiary.Name" class="form-control" />
                <span asp-validation-for="Subsidiary.Name" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subsidiary.Email" class="control-label"></label>
                <input asp-for="Subsidiary.Email" class="form-control" />
                <span asp-validation-for="Subsidiary.Email" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subsidiary.Opening" class="control-label"></label>
                <input asp-for="Subsidiary.Opening" class="form-control" />
                <span asp-validation-for="Subsidiary.Opening" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subsidiary.FixedCost" class="control-label"></label>
                <input asp-for="Subsidiary.FixedCost" class="form-control" />
                <span asp-validation-for="Subsidiary.FixedCost" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subsidiary.StateId" class="control-label"></label>
                <select asp-for="Subsidiary.StateId" asp-items="@(new SelectList(Model.States, "Id", "Name"))" class="form-control"></select>
                <span asp-validation-for="Subsidiary.StateId" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn alert-success" />
                <a asp-action="Index" class="btn alert-warning">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}