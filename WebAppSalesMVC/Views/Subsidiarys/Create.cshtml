@model WebAppSalesMVC.Models.Subsidiary

@{       
    ViewData["Title"] = "Create new subsidiary";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Opening" class="control-label"></label>
                <input asp-for="Opening" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FixedCost" class="control-label"></label>
                <input asp-for="FixedCost" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default alert-danger" />
            </div>
        </form>
    </div>
</div>
