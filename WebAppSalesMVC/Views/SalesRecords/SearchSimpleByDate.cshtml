@model IEnumerable<WebAppSalesMVC.Models.SalesRecord>
<h2>Simple Search</h2>
<nav class="navbar bg-info">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <fieldset>
                <div class="form-group">
                    <div class="form-group">
                        <label for="minDate">Min Date</label>
                        <input type="date" class="form-control" name="dateMin" value=@ViewData["dateMin"]>
                    </div>
                    <div class="form-group">
                        <label for="maxDate">Max Date</label>
                        <input type="date" class="form-control" name="dateMax" value=@ViewData["dateMax"]>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Filter</button>
            </fieldset>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">&bull; Sellers = @Model.Count() &bull; Total sales = @Model.Sum(x => x.Amount).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subsidiary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subsidiary.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subsidiary.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subsidiary.State.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>